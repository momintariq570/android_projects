<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LocationImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="LocationName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_below">@id/card_list_item_image</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LocationLinks">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/card_list_item_location_name</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LocationAddress" parent="LocationLinks">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="LocationCall" parent="LocationLinks">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="LocationWebsite" parent="LocationLinks">
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
