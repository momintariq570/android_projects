<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_articles_topic_default"
        android:inputType="text"
        android:key="@string/settings_articles_topic_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_articles_topic_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_num_articles_default"
        android:inputType="number"
        android:key="@string/settings_num_articles_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_num_articles_label" />

</PreferenceScreen>